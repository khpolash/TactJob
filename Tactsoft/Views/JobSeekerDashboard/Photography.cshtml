@model Tactsoft.Core.Entities.Photography


<form asp-action="Create" asp-controller="Photography" method="post" enctype="multipart/form-data">
	<div class="col-md-12">
		<div class="imgPreview-area" id="imgPreview">
			<img src="" alt="Image Preview" class="preview-iamge">
			<span class="imgPreview-defaultText">Preview Image</span>
		</div>
	</div>
	<div class="col-md-12">
		<label class="form-label mt-3" asp-for="PhotoPath" for="profilePhoto">Profile Photo</label>
		<div class="input-group mb-3">
			<input type="file" asp-for="PhotoPath" class="form-control inpFile" id="inpFile">
		</div>
	</div>

	<div class="col-12">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
</form>
