@model Tactsoft.Core.ViewModel.RegisterViewModel
@using Tactsoft.Core.Defaults;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/plugins/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <style>

        /* SignUp Start =====================================*/
        .signup-section {
            width: 100%;
            height: auto;
            display: flex;
            align-items: center;
            padding: 40px 0px;
            overflow-x: hidden;
        }

            .signup-section .signup-body {
                width: 50%;
                margin: auto;
                padding: 20px 20px;
                border-style: solid;
                border-color: #DBD6D6;
                border-width: 1px;
                background-color: white;
                border-radius: 4px;
                box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            }

                .signup-section .signup-body .svg-img {
                    width: 100%;
                    border: none;
                    text-align: center;
                }

                    .signup-section .signup-body .svg-img img {
                        width: 130px;
                        height: 90px;
                    }

                .signup-section .signup-body h4 {
                    font-size: 24px;
                    font-family: 'Roboto', sans-serif;
                    font-weight: 600;
                }

                .signup-section .signup-body p {
                    color: #6A6868;
                    font-size: 14px;
                    font-family: 'Roboto', sans-serif;
                }

                .signup-section .signup-body form input:focus {
                    border-color: #272727;
                    outline: #272727;
                    box-shadow: none;
                }

                .signup-section .signup-body form .form-check input:checked {
                    border-color: #272727;
                    background-color: #272727;
                }

                .signup-section .signup-body form input, label {
                    color: #272727;
                    font-size: 14px;
                    font-family: 'Roboto', sans-serif;
                    font-weight: 400;
                }

                .signup-section .signup-body form select {
                    color: #272727;
                    font-size: 14px;
                    font-family: 'Roboto', sans-serif;
                    font-weight: 400;
                }

                .signup-section .signup-body form .signUp-btn {
                    width: 25%;
                    display: flex;
                    justify-content: center;
                    padding-top: 8px;
                    padding-bottom: 8px;
                    color: white;
                    font-size: 14px;
                    font-family: 'Roboto', sans-serif;
                    font-weight: 400;
                    margin: auto;
                    background-color: #272727;
                    border-style: solid;
                    border-color: #272727;
                    border-radius: 4px;
                }

                    .signup-section .signup-body form .signUp-btn:hover {
                        background-color: #FC4501;
                        border-color: #FC4501;
                        transition: .6s ease-in-out;
                    }
        form #togglePassword, #toggleConPassword {
            position: relative;
            top: -29px;
            left: 94%;
            cursor: pointer;
        }
        /*  SignUp End ===================================*/

        @@media only screen and (max-width:991px) {
            .signup-section .signup-body {
                width: 90%;
            }
        }
    </style>
</head>
<body>

    <!-- =========== SignUp Start =========== -->
    <div class="signup-section">
        <div class="col-md-12">
            <div class="row">
                <div class="signup-body">
                    <div class="svg-img">
                        <img src="~/assets/img/undraw_sign__up_nm4k.svg" class="img-fluid" alt="Login">
                    </div>
                    <h4 class="text-center mt-4">SignUp</h4>
                    <p class="text-center">Lorem, ipsum, dolor sit amet consectetur</p>
                    <form asp-action="Register" asp-controller="Account" method="post" class="row g-3 needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-6">
                            <label asp-for="JobseekerName" class="form-label"></label>
                            <input asp-for="JobseekerName" class="form-control" />
                            <span asp-validation-for="JobseekerName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label"></label>
                            <div class="form-inline">
                                <input type="radio" id="male" class="btn-check" asp-for="Gender" name="Gender" value="Male" autocomplete="off" />
                                <label class="btn btn-sm btn-outline-primary" for="male">
                                    <i class="bi bi-gender-male"></i> Male
                                </label>
                                <input type="radio" id="female" class="btn-check" asp-for="Gender" name="Gender" value="Female" autocomplete="off" />
                                <label class="btn btn-sm btn-outline-primary" for="female">
                                    <i class="bi bi-gender-female"></i> Female
                                </label>
                                <input type="radio" id="other" class="btn-check" asp-for="Gender" name="Gender" value="Other" autocomplete="off" />
                                <label class="btn btn-sm btn-outline-primary" for="other">
                                    <i class="bi bi-gender-ambiguous"></i> Other
                                </label>
                                <br />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="JobCategoryId" class="form-label"></label>
                            <select asp-for="JobCategoryId" class="form-control" asp-items="@(ViewBag.JobCategoryId)">
                                <option value="">Select Category</option>
                            </select>
                            <span asp-validation-for="JobCategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EmailAddress" class="form-label"></label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label asp-for="UserName" class="form-label">Select your User ID</label>
                            <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="userId" id="emailAdd" value="emailAdd">
                                <label class="form-check-label" for="emailAdd">Email Address</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="userId" id="phoneNo" value="phoneNo">
                                <label class="form-check-label" for="phoneNo">Phone Number</label>
                            </div>
                            <br />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="col-md-6 mt-2">
                                <input asp-for="UserName" class="form-control border-0" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <i class="bi bi-eye-slash" id="togglePassword"></i>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <i class="bi bi-eye-slash" id="toggleConPassword"></i>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Agree" />
                                @Html.DisplayNameFor(model => model.Agree)
                                <label> to all <a href="javascript:void(0)">Terms</a>, <a href="javascript:void(0)">Privacy Policy</a> and <a href="javascript:void(0)">Cookies Policy</a>.</label>
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Subscribe" />
                                @Html.DisplayNameFor(model => model.Subscribe)
                            </label>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary signUp-btn btn-sm" type="submit">SignUp</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- =========== SignUp End =========== -->


    <script src="~/plugins/jquery/jquery.js"></script>

    <script>

        const togglePassword = document.querySelector("#togglePassword");
        const password = document.querySelector("#Password");
        togglePassword.addEventListener("click", function () {
            // toggle the type attribute
            const type = password.getAttribute("type") === "password" ? "text" : "password";
            password.setAttribute("type", type);

            // toggle the icon
            this.classList.toggle("bi-eye");
        });

        const toggleConPassword = document.querySelector("#toggleConPassword");
        const conPassword = document.querySelector("#ConfirmPassword");
        toggleConPassword.addEventListener("click", function () {
            // toggle the type attribute
            const type = conPassword.getAttribute("type") === "password" ? "text" : "password";
            conPassword.setAttribute("type", type);

            // toggle the icon
            this.classList.toggle("bi-eye");
        });

        $('input[type=radio][name=userId]').on('change', function () {
            switch ($(this).val()) {
                case 'emailAdd':
                    document.getElementById('UserName').setAttribute("value", document.getElementById("EmailAddress").value);
                    break;
                case 'phoneNo':
                    document.getElementById('UserName').setAttribute("value", document.getElementById("PhoneNumber").value);
                    break;
            }
        });

    </script>

</body>
</html>
