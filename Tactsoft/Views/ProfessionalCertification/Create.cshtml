@model Tactsoft.Core.Entities.ProfessionalCertificationSummary

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">Professional Certification Registraion Form</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Professional Certification Details info</h3>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="row mb-2">
                                    <label asp-for="Certification" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Certification" class="form-control" />
                                        <span asp-validation-for="Certification" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Institute" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Institute" class="form-control" />
                                        <span asp-validation-for="Institute" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Location" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Location" class="form-control" />
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                </div>

                              

                                <div class="row mb-2">
                                    <label class="col-md-3 col-form-label">Duration Start</label>
                                    <div class="col-md-9">
                                        <input type="date" asp-for="DurationStart" class="form-control" min="@(DateTime.Now.ToString("yyyy-MM-dd"))" />
                                        <span asp-validation-for="DurationStart" class="text-danger"></span>
                                    </div>
                                </div>

                              

                              

                                

                                

                                <div class="row mb-2">
                                    <label class="col-md-3 col-form-label">Duration End</label>
                                    <div class="col-md-9">
                                        <input type="date" asp-for="DurationEnd" class="form-control" min="@(DateTime.Now.ToString("yyyy-MM-dd"))" />
                                        <span asp-validation-for="DurationEnd" class="text-danger"></span>
                                    </div>
                                </div>


                                
                                
                                
                               

                                

                               




                                

                                


                            </div>

                        </div>
                    </div>

                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="far fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }